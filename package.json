{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": "18.x"
    },
    "overrides": {
        "eslint": "^8.57.1",
        "react-dom": "^17.0.2",
        "nth-check": "2.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/eslint-parser": "^7.25.1",
        "@babel/plugin-proposal-decorators": "^7.24.7",
        "@babel/plugin-proposal-export-default-from": "^7.24.7",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-class-properties": "^7.25.4",
        "@babel/plugin-transform-export-namespace-from": "^7.24.7",
        "@babel/plugin-transform-nullish-coalescing-operator": "^7.24.7",
        "@babel/plugin-transform-object-rest-spread": "^7.24.7",
        "@babel/plugin-transform-optional-chaining": "^7.24.8",
        "@babel/plugin-transform-private-property-in-object": "^7.24.7",
        "@babel/plugin-transform-unicode-property-regex": "^7.24.7",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-react": "^7.24.7",
        "@deriv-com/eslint-config-deriv": "2.2.0",
        "@jest/globals": "^29.7.0",
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^12.1.5",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^17.0.27",
        "@types/react": "^18.0.7",
        "@types/react-dom": "^18.0.0",
        "@types/react-router-dom": "^5.1.6",
        "@types/react-virtualized": "^9.21.21",
        "dotenv-webpack": "^8.0.1",
        "husky": "^7.0.0",
        "jest": "^29.7.0",
        "jest-chain": "^1.1.6",
        "jest-environment-jsdom": "^29.7.0",
        "jest-extended": "^4.0.2",
        "lint-staged": "^11.2.6",
        "postcss": "^8.4.24",
        "prettier": "^3.0.0",
        "storybook": "^8.3.5",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-formatter-pretty": "^2.1.1",
        "stylelint-no-unsupported-browser-features": "^4.0.0",
        "stylelint-selector-bem-pattern": "^2.1.0",
        "stylelint-webpack-plugin": "^2.1.1",
        "ts-jest": "^29.2.5"
    },
    "scripts": {
        "start": "npm exec --workspace=@deriv/core -- npm run start",
        "serve": "f () { npm exec --workspace=@deriv/${1:-'*'} -- npm run serve $npm_config_open;}; f",
        "bootstrap": "npm ci --strict-peer-deps --verbose",
        "bootstrap:dev": "npm install --strict-peer-deps --verbose",
        "clean": "rm -rf node_modules && rm -rf packages/*/node_modules",
        "build:all": "npm run build --workspace=@deriv/components && npm run build --workspace=@deriv/trader && npm run --workspaces --if-present build",
        "build:prod": "NODE_ENV=staging npm run build:all",
        "build:storybook": "npm run --workspace=@deriv/components -- sb build --output-dir .out",
        "build:gh-pages": "npm run build:components && npm run build:reports",
        "build:travis": "npm run build:travis --workspace=@deriv/shared && npm run build:travis --workspace=@deriv/components && npm run build:travis --workspace=@deriv/translations && npm run build:travis --workspace=@deriv/reports",
        "analyze:build": "npm run --workspaces --if-present analyze:build",
        "analyze:stats": "npm run --workspaces --if-present analyze:stats",
        "check-imports": "node ./scripts/check-imports.js",
        "test": "npm run test:stylelint && npm run test:eslint-all && npm run test:jest",
        "test:eslint-all": "npm run --workspaces --if-present test:eslint",
        "test:stylelint": "stylelint \"./packages/*/src/**/*.s(a|c)ss\"",
        "test:jest": "jest --all --maxWorkers=${JEST_MAX_WORKERS:-'50%'}",
        "test:ci": "npm run test:stylelint && npm run test:eslint-all",
        "stylelint:fix": "stylelint \"./packages/*/src/**/*.s(a|c)ss\" --fix",
        "stylelint-check": "stylelint-config-prettier-check",
        "prettify": "prettier --config ./.prettierrc --write \"./packages/*/{stories,script,src,build}/**/*.{js,jsx,ts,tsx,scss}\"",
        "deploy": "NODE_ENV=staging npm run build:all && npm exec --workspace=@deriv/core -- npm run deploy",
        "deploy:clean": "npm run build:travis && npm exec --workspace=@deriv/core -- npm run deploy:clean",
        "deploy:folder": "NODE_ENV=staging npm run build:gh-pages && npm exec --workspace=@deriv/core -- npm run deploy:folder",
        "translate": "npm exec --workspace=@deriv/translations -- npm run translate",
        "publish-package": "npm exec --workspace=@deriv/${1:-'*'} -- npm run publish_package",
        "prepare": "husky install"
    },
    "dependencies": {
        "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
        "@babel/preset-typescript": "^7.24.7",
        "@deriv-com/analytics": "1.31.3",
        "@sendbird/chat": "^4.9.7",
        "@types/react-transition-group": "^4.4.4",
        "babel-jest": "^29.7.0",
        "dotenv": "^8.2.0",
        "nth-check": "2.0.1",
        "pbkdf2": "^3.1.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-svg-core": "3.0.3",
        "react-toastify": "^9.1.3",
        "typescript": "^4.6.3"
    },
    "optionalDependencies": {
        "fsevents": "^2.3.2"
    }
}
